  <script>
  function showInternshipDescriptions(imageID) {
    fetch('/internship_descriptions')
    .then(response => response.json())
    .then(data => {
        // Display the internship descriptions on the page
        // For example:
        let descriptions = '';
        data.forEach(internship => {
          if (internship.imageId === imageId) {
            descriptions += `<h3>${internship.title} (${internship.location})</h3>`;
            descriptions += `<p>${internship.description}</p>`;
          }
        });
        document.getElementById('internship_descriptions').innerHTML = descriptions;
    });
}
</script>

<div id="internship_descriptions"></div>
